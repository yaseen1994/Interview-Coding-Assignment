function reverse($input_data){ 
    for($i=strlen($input_data)-1, $j=0; $j<$i; $i--, $j++)  
    { 
        $temp = $input_data[$i]; 
        $input_data[$i] = $input_data[$j]; 
        $input_data[$j] = $temp; 
    } 
    #return $input_data; 

    function console_output($output, $script = true) {
    $input = 'console.log(' . json_encode($output, JSON_HEX_TAG) . ');';
    if ($script) {
        $input = '<script>' . $input . '</script>';
    }
    echo $input;
}

console_output($input_data); 

